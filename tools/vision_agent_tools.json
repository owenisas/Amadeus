    {
        "type": "function",
        "function": {
            "name": "observe_screen",
            "description": "Take a screenshot and get a detailed visual analysis of the current screen. This is your primary way to understand what's on screen. The analysis will describe visible elements, their approximate positions, and any text content.",
            "parameters": {
                "type": "object",
                "properties": {
                    "focus": {
                        "type": "string",
                        "description": "Optional: What to focus on in the analysis. E.g., 'buttons', 'text fields', 'the search bar', 'navigation elements'"
                    }
                },
                "required": []
            }
        }
    },
    {
        "type": "function",
        "function": {
            "name": "find_element",
            "description": "Find a specific UI element on screen and get its coordinates. Use this when you need to locate a button, text, icon, or any visual element to interact with.",
            "parameters": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string",
                        "description": "Description of the element to find. Be specific: 'the blue Send button', 'search text field at top', 'hamburger menu icon', 'the word Settings'"
                    },
                    "return_multiple": {
                        "type": "boolean",
                        "description": "If true, return coordinates for all matching elements. Default is false (returns first/best match)."
                    }
                },
                "required": ["description"]
            }
        }
    },
    {
        "type": "function",
        "function": {
            "name": "find_text",
            "description": "Find specific text on the screen and get its coordinates. Use OCR to locate exact text strings.",
            "parameters": {
                "type": "object",
                "properties": {
                    "text": {
                        "type": "string",
                        "description": "The exact text to find on screen."
                    },
                    "partial_match": {
                        "type": "boolean",
                        "description": "If true, match partial text. Default is false (exact match)."
                    }
                },
                "required": ["text"]
            }
        }
    },
    {
        "type": "function",
        "function": {
            "name": "tap_at",
            "description": "Tap at specific screen coordinates. Use after finding an element's position with find_element or find_text.",
            "parameters": {
                "type": "object",
                "properties": {
                    "x": {
                        "type": "integer",
                        "description": "X coordinate (pixels from left edge)."
                    },
                    "y": {
                        "type": "integer",
                        "description": "Y coordinate (pixels from top edge)."
                    }
                },
                "required": ["x", "y"]
            }
        }
    },
